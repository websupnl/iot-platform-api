generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String     @id @default(uuid())
  name        String
  slug        String     @unique
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  locations   Location[]
  apiKeys     ApiKey[]
}

model Location {
  id          String     @id @default(uuid())
  name        String
  description String?
  projectId   String
  createdAt   DateTime   @default(now())

  project     Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  devices     Device[]
}

model Device {
  id          String    @id @default(uuid())
  name        String
  type        String
  locationId  String
  createdAt   DateTime  @default(now())

  location    Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)
}

model ApiKey {
  id         String   @id @default(uuid())
  key        String   @unique
  projectId  String
  createdAt  DateTime @default(now())

  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

